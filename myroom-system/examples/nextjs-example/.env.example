# MyRoom System - Next.js Environment Variables Example
# Copy this file to .env.local and update the values

# Backend API Configuration
# URL của backend API (bắt buộc)
NEXT_PUBLIC_BACKEND_URL=http://localhost:3579

# API Key cho MyRoom System (bắt buộc)
NEXT_PUBLIC_MYROOM_API_KEY=pk_test_1234567890abcdef1234567890abcdef

# Optional: Custom domain cho resources
NEXT_PUBLIC_MYROOM_CUSTOM_DOMAIN=https://api.myroom.com

# Optional: Project ID
NEXT_PUBLIC_MYROOM_PROJECT_ID=your-project-id

# Optional: Resource ID
NEXT_PUBLIC_MYROOM_USE_RESOURCE_ID=true

# Development Configuration
# Enable debug mode trong development
NEXT_PUBLIC_DEBUG_MODE=true

# Enable performance monitoring
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# CDN Configuration (optional)
# URL của CDN cho static assets
NEXT_PUBLIC_CDN_URL=https://cdn.myroom.com

# Database Configuration (nếu cần)
# DATABASE_URL=postgresql://user:password@localhost:5432/myroom

# Authentication (nếu cần)
# NEXTAUTH_URL=http://localhost:3579
# NEXTAUTH_SECRET=your-secret-key

# External Services
# Google Analytics ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry DSN cho error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx

# Feature Flags
# Enable experimental features
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false

# Enable WebGL2 support
NEXT_PUBLIC_ENABLE_WEBGL2=true

# Enable WebXR support
NEXT_PUBLIC_ENABLE_WEBXR=false

# Performance Configuration
# Maximum texture size
NEXT_PUBLIC_MAX_TEXTURE_SIZE=2048

# Enable texture compression
NEXT_PUBLIC_ENABLE_TEXTURE_COMPRESSION=true

# Enable LOD (Level of Detail)
NEXT_PUBLIC_ENABLE_LOD=true

# Security Configuration
# CORS allowed origins (comma separated)
CORS_ALLOWED_ORIGINS=http://localhost:3579,https://myroom.com

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Deployment Configuration
# Environment (development, staging, production)
NODE_ENV=development

# Port for development server
PORT=3579

# Host for development server
HOST=localhost

# SSL Configuration (cho production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Logging Configuration
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Cache Configuration
# Redis URL cho caching
# REDIS_URL=redis://localhost:6379

# Cache TTL in seconds
CACHE_TTL=3600

# File Upload Configuration
# Maximum file size in bytes (50MB)
MAX_FILE_SIZE=52428800

# Allowed file types
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.webp,.glb,.gltf

# Storage Configuration
# AWS S3 (nếu sử dụng)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=myroom-assets

# Google Cloud Storage (nếu sử dụng)
# GCS_PROJECT_ID=your-project-id
# GCS_BUCKET=myroom-assets
# GCS_KEY_FILE=/path/to/service-account.json

# Email Configuration (nếu cần)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Webhook Configuration
# Webhook secret cho security
# WEBHOOK_SECRET=your-webhook-secret

# Monitoring và Analytics
# New Relic License Key
# NEW_RELIC_LICENSE_KEY=your-license-key

# DataDog API Key
# DATADOG_API_KEY=your-api-key

# Health Check Configuration
# Health check endpoint
HEALTH_CHECK_PATH=/health

# Database health check timeout
DB_HEALTH_CHECK_TIMEOUT=5000

# API health check timeout
API_HEALTH_CHECK_TIMEOUT=3000